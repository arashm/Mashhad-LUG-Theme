%header#topbar
  .container
    .logo
      %img{src: './images/MashhadLUGtop.png'}

    %nav.menue
      %ul
        %li
          %a{href:'#'} اعضا
        %li
          %a{href:'#'} عکس‌ها
        %li
          %a{href:'#'} فعالیت‌ها
        %li
          %a{href:'#'} ویکی
        %li
          %a{href:'#'} رویدادها
        %li
          %a{href:'#'} دیوار خاطره

.container
  %header#slang
    %h1 ما مشهدلاگ هستیم
    %h2 نرم‌افزار آزاد از اعتقادات ماست

  %section.carousel
    %div.item
      %img{src: 'http://owlgraphic.com/owlcarousel/demos/assets/fullimage1.jpg'}

%section.next-meeting
  .container
    .title
      %p
        %span.next-meeting جلسه آینده:
        %span.next-meeting-desc چهارشنبه ۱۴ اسفند ۱۳۹۲

    .more-info
      %a{href: '#'} اطلاعات بیشتر

%section.info
  .container
    .news
      %h2 جلسه ۱۴۳ام
      %p این جلسه در تاریخ ۳۰ بهمن ماه ۱۳۹۲ در محل برگذاری جلسات گروه، بین رضا ۱۹ و چهارراه بعثت (حاشیه خیابان) پلاک ۱۸۰ (آموزشگاه دیتاسنترشرق) با حضور اعضای گروه برگذار شد....
      %p.extend
        %a{href: '#'} ادامه خبر

      %p
        %span.arrows
          %i.fa.fa-chevron-up
          %i.fa.fa-chevron-down
          \|
        %span.more-news
          %a{href: '#'} اخبار بیشتر

    .join
      %h1 به ما بپیوندید!

      %form{url: '#'}
        %input.email{type: 'email', placeholder: 'پست الکترونیکی'}
        %input.submit{type: 'button', value: 'ثبت!'}

%footer#bottom
  .container
    .stats
      %ul
        %li تعداد جلسات: ۱۴۳
        %li تعداد رویدادها: ۱۷
        %li تعداد اعضا: ۴۳۶

    .links
      %ul
        %li
          %a{href: '#'} ارتباط با ما
        %li
          %a{href: '#'} همکاری با ما
        %li
          %a{href: '#'} کمک مالی
        %li
          %a{href: '#'} سیاست‌ها و اساسنامه
        %li
          %a{href: '#'} موارد قانونی

    .copywrite
      %p اطلاعات این وب‌سایت تحت گواهینامه GFDL در دسترس است.
      %p ©۱۳۸۶-۱۳۹۲ توسعه‌دهندگان مستقل
      %p
        %a{href: '#'} کمک به گسترش این صفحه

    .logo
      %img{src: './images/MashhadLUGtop.png'}

    .logos
      %a{href: 'http://iranserver.com/'}
        %img{src: './images/IranServer.png', alt: 'IranServer'}

      %a{href: 'http://edatacit.com/'}
        %img{src: './images/edc.png', alt: 'edc'}

      %img{src:'./images/GNU-small.jpg'}
      %img{src:'./images/open-source-small.png'}
      %img{src:'./images/FSF-small.png'}
